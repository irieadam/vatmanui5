<mvc:View
height="100%"
    controllerName="vatmanui5.webApp.view.Validation"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">

<App>
<Page title="Some title" id="__page0" enableScrolling="false" floatingFooter="true" >

	            <headerContent>

	                <Button  text="Logout" width="100px" press="doLogout" icon="sap-icon://log"/>

	            </headerContent>

	        <content>
			<Panel id="__panel0">

	         <content>

	                    <FlexBox width="100%" id="__box0">

	                        <items>

	                            <HBox width="11em" id="__hbox0">

	                                <items>

	                                    <Label  text="VAT requestor number " width="11em" id="__label2"/>

	                                </items>

	                            </HBox>

	                            <HBox width="100%" id="__hbox1">

	                                <items>

	                                    <sap.ui.commons:TextField  xmlns:sap.ui.layout="sap.ui.layout" xmlns:sap.ui.commons="sap.ui.commons" id="__field0" width="4em" value="{vm>/requesterCountryCode}"/>

	                                    <sap.ui.commons:TextField  xmlns:sap.ui.commons="sap.ui.commons" id="__field1" value="{vm>/requesterVatNumber}"/>

										 
	                                </items>

	                            </HBox>

	                        </items>

	                    </FlexBox>
						 <Button
							text="Say Hello"
							press="onShowHello" 
							icon="sap-icon://world"/>
						<Input
							value="{vm>/requesterVatNumber}"
							description="Hello {vm>/requesterVatNumber}"
							valueLiveUpdate="true"
							width="60%" /> 

	                </content>

	            </Panel>
					<IconTabBar selectedKey="__filter0" id="__bar0">
	                <items>
						<IconTabFilter text="requests" count="22" showAll="true" id="__filter0">

	                        <Table noDataText="upload a file" 
								   id="reqeuestsTable" 
								   showSeparators="Inner" 
								   items="{vm>/vatNumbers}" >
 									
									<columns>
										<Column id="__column1">
											<header>
												<Label text="Country"/>
											</header>
										</Column>
										<Column id="__column0">
											<header>
												<Label text="VAT Number"/>
											</header>
										</Column>
										<Column id="__column2">
											<header>
												<Label text="Name" />
											</header>
										</Column>
										<Column id="__column3">
											<header>
												<Label text="Address" />
											</header>
										</Column>
										<Column id="__column4">
											<header>
												<Label text="Confirmation" />
											</header>
										</Column>
										<Column id="__column5">
											<header>
												<Label text="Request Date" />
											</header>
										</Column>
										<Column id="__column6">
											<header>
												<Label text="Valid" />
											</header>
										</Column>
										<Column id="__column7">
											<header>
												<Label text="Retries"/>
											</header>
										</Column>
									</columns>
	                      
									<ColumnListItem id="__item3">										
										<cells>
											<Input ariaLabelledBy="__xmlview0--__label3" width="100%" id="countryCode" value="{vm>countryCode}"/>
											<Input ariaLabelledBy="__xmlview0--__label0" width="100%" id="vatNumber" value="{vm>vatNumber}"/>
											<Label text="{path:'vm>traderName'}"/>
											<Label text="{path:'vm>traderAddress'}"/>
											<Label text="{path:'vm>confirmation'}"/>
											<Label text="{path:'vm>requestTime'}"/>
											<Label text="{path:'vm>valid'}"/>
											<Label text="{path:'vm>retries'}"/>
										</cells>
	                                </ColumnListItem>
	                           </Table>
	                    </IconTabFilter>

	                    <IconTabFilter text="failed" count="10" icon="sap-icon://message-error" iconColor="Critical" id="__filter1"/>

	                    <IconTabFilter text="valid" count="5" icon="sap-icon://accept" iconColor="Positive" id="__filter2"/>
	                     
	                    <IconTabFilter text="error" count="2" icon="sap-icon://message-warning" id="__filter3" iconColor="Critical"/></items>

	            </IconTabBar>

	        </content>
	        <footer>
	            <Toolbar width="100%" id="__toolbar3">
	                <content>
	                    <sap.ui.unified:FileUploader  xmlns:sap.ui.unified="sap.ui.unified" id="__uploader0" buttonText="Select File" icon="sap-icon://upload" change="upload"/>
	                    <Button  text="Clear" width="100px" id="__button3" icon="sap-icon://delete"/>
	                    <ToolbarSpacer  id="__spacer0"/>
	                    <Button  ariaLabelledBy="__xmlview0--__label2" text="Validate" width="10em" id="__button2" icon="sap-icon://provision" press="onProcess" />
	                    <ToolbarSpacer  id="__spacer0_copy"/>
	                    <RadioButtonGroup  width="11em" columns="2" selectedIndex="-1" id="__group0">
	                        <buttons>
	                            <RadioButton selected="true" groupName="__group0" text=".xslx" id="__button1"/>
	                            <RadioButton groupName="__group0" text=".csv" id="__button4"/>
	                            </buttons>
	                        
	                    </RadioButtonGroup>
	                    <Button text="Export" width="100px" id="__button6" icon="sap-icon://download"/>
	                </content>
	            </Toolbar>
	        </footer>
	        </Page>
			</App>
</mvc:View>