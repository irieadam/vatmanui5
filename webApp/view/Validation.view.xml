<mvc:View
    controllerName="webApp.view.Validation"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Button
        text="Say Hello"
        press="onShowHello" 
        icon="sap-icon://world"/>
    <Input
        value="{vm>/recipient/name}"
        description="Hello {vm>/recipient/name}"
        valueLiveUpdate="true"
        width="60%" />
</mvc:View>